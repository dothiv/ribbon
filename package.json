    "initiative",
    "AIDS",
    "domains",
    "red",
    "ribbon",
    "digital"
  ],
  "author": "dotHIV Initiative | https://click4life.hiv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dothiv/ribbon/issues"
  },
  "homepage": "https://github.com/dothiv/ribbon#readme",
  "dependencies": {
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "aliasify": "^2.0.0",
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "browserify-shim": "^3.8.12",
    "husky": "^0.11.9",
    "lodash": "^4.16.4",
    "nconf": "^0.8.4",
    "node-sass": "^3.10.1",
    "node-static": "^0.7.9",
